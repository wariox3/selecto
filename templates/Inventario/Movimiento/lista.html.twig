{% extends 'base.html.twig' %}
 {% block content %}
     {{ form_start(form) }}
     <div class="row">
         <div class="col-md-12">
             <section class="panel">
                 <header class="panel-heading">
                     <div class="panel-actions">
                         <a href="#" class="fa fa-caret-down"></a>
                     </div>
                     <h2 class="panel-title">Filtro de busqueda</h2>
                 </header>
                 <div class="panel-body">
                     <div class="form-group">
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Tercero:</label>
                             <div class="col-sm-2">
                                 {{ form_widget(form.cboTerceroRel) }}
                             </div>
                         </div>
                     </div>
                     <div class="form-group">
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Desde:</label>
                             <div class="col-sm-2">
                                 {{ form_widget(form.fechaDesde) }}
                             </div>
                         </div>
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Hasta:</label>
                             <div class="col-sm-2">
                                 {{ form_widget(form.fechaHasta) }}
                             </div>
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                         </div>
                     </div>
                 </div>
             </section>
         </div>
         <div class="col-md-12">
             <section class="panel">
                 <div class="panel-body">
                     <div class="table-responsive">
                         <table class="table table-bordered mb-none">
                             <thead>
                             <tr>
                                 <th>Id</th>
                                 <th>Fecha</th>
                                 <th>Tercero</th>
                                 <th></th>
                                 <th></th>
                                 <th></th>
                             </tr>
                             </thead>
                             <tbody>
                             {% for movimiento in arMovimientos %}
                                 <tr>
                                     <td>{{ movimiento.codigoMovimientoPk }}</td>
                                     <td>{{ movimiento.fecha|date('Y-m-d') }}</td>
                                     <td>{{ movimiento.tercero }}</td>
                                     <td><a
                                                 href="{{ path('movimiento_nuevo', {'documento' : documento, 'id': movimiento.codigoMovimientoPk }) }}"
                                                 title="editar descripcion"><i
                                                     class="fa fa-edit fa-lg"></i></a></td>
                                     <td><a
                                                 href="{{ path('movimiento_detalle', {'id': movimiento.codigoMovimientoPk }) }}"
                                                 title="mostrar informaciÃ³n"><i class="fa fa-eye fa-lg"></i></a></td>
                                     <td><input type="checkbox" name="ChkSeleccionar[]"
                                                                    value="{{ movimiento.codigoMovimientoPk }}"/></td>
                                 </tr>
                             {% endfor %}
                             </tbody>
                         </table>
                         <div style="display: flex; flex-direction: row;">
                             <span style="margin-right: 4px">registros: {{ arMovimientos.getTotalItemCount }}</span>
                             {{ knp_pagination_render(arMovimientos) }}
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group"
                                  aria-label="...">
                                 <a class="btn btn-sm btn-default"
                                    href="{{ path('movimiento_nuevo',{'documento': documento,'id':0}) }}">Nuevo
                                 </a>
                                 {{ form_widget(form.btnEliminar) }}
                             </div>
                         </div>
                     </div>
                 </div>
             </section>
         </div>
     </div>
     {{ form_end(form) }}
 {% endblock %}




































