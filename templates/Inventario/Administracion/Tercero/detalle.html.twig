{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('tercero_lista') }}">Volver</a>
        </div>
    </div>
    <br><br>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion ">
        <tr>
            <td class="titulo">DIGITO</td>
            <td class="td-in-well">{{ arTercero.digitoVerificacion }}</td>
            <td class="titulo">IDENTIFICACION</td>
            <td class="td-in-well">{{ arTercero.numeroIdentificacion }}</td>
        </tr>
        <tr>
            <td class="titulo">PRIMER NOMBRE</td>
            <td class="td-in-well">{{ arTercero.primerNombre }}</td>
            <td class="titulo">SEGUNDO NOMBRE</td>
            <td class="td-in-well">{{ arTercero.segundoNombre }}</td>
        </tr>
        <tr>
            <td class="titulo">PRIMER APELLIDO</td>
            <td class="td-in-well">{{ arTercero.primerApellido }}</td>
            <td class="titulo">SEGUNDO APELLIDO</td>
            <td class="td-in-well">{{ arTercero.segundoApellido }}</td>
        </tr>
        <tr>
            <td class="titulo">NOMBRE CORTO:</td>
            <td class="td-in-well">{{ arTercero.nombreCorto }}</td>
            <td class="titulo">EMAIL</td>
            <td class="td-in-well">{{ arTercero.email }}</td>
        </tr>
        <tr>
            <td class="titulo">TELEFONO</td>
            <td class="td-in-well">{{ arTercero.telefono }}</td>
            <td class="titulo">CELULAR</td>
            <td class="td-in-well">{{ arTercero.celular }}</td>
        </tr>
        <tr>
            <td class="titulo">CIUDAD</td>
            <td class="td-in-well">{{ arTercero.ciudadRel.nombre | default('') }}</td>
            <td class="titulo">DIRECCION</td>
            <td class="td-in-well">{{ arTercero.direccion }}</td>
        </tr>
        <tr>
            <td class="titulo">CLIENTE:</td>
            <td class="td-in-well">{{ arTercero.cliente ? 'SI':'NO' }}</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="titulo">PROVEEDOR:</td>
            <td class="td-in-well">{{ arTercero.proveedor ? 'SI':'NO' }}</td>
            <td></td>
            <td></td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}