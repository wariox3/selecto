{% extends 'base.html.twig' %}

 {% block content %}
     {{ form_start(form) }}
     <div class="row">
         <div class="col-md-12">
             <section class="panel">
                 <header class="panel-heading">
                     <div class="panel-actions">
                         <a href="#" class="fa fa-caret-down"></a>
                     </div>
                     <h2 class="panel-title">Filtro de busqueda</h2>
                 </header>
                 <div class="panel-body">
                     <div class="form-group">
                         <label class="col-sm-1 control-label">Id:</label>
                         <div class="col-sm-2">
                             {{ form_widget(form.codigoItem) }}
                         </div>
                         <label class="col-sm-1 control-label">Descripción:</label>
                         <div class="col-sm-2">
                             {{ form_widget(form.descripcion) }}
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                         </div>
                     </div>
                 </div>
             </section>
         </div>

         <div class="col-md-12">
             <section class="panel">
                 <div class="panel-body">
                     <div class="table-responsive">
                         <table class="table table-bordered mb-none">
                             <thead>
                             <tr>
                                 <th>Id</th>
                                 <th>Descripcion</th>
                                 <th></th>
                                 <th></th>
                                 <th></th>
                             </tr>
                             </thead>
                             <tbody>
                             {% for item in arItems %}
                                 <tr>
                                     <td>{{ item.codigoItemPk }}</td>
                                     <td>{{ item.descripcion }}</td>
                                     <td><a
                                                 href="{{ path('item_nuevo', { 'id': item.codigoItemPk }) }}"
                                                 title="editar descripcion"><i
                                                     class="fa fa-edit fa-lg"></i></a></td>
                                     <td><a
                                                 href="{{ path('item_detalle', { 'id': item.codigoItemPk }) }}"
                                                 title="mostrar información"><i class="fa fa-eye fa-lg"></i></a></td>
                                     <td class="text-center"><input type="checkbox" name="ChkSeleccionar[]"
                                                                    value="{{ item.codigoItemPk }}"/></td>
                                 </tr>
                             {% endfor %}
                             </tbody>
                         </table>
                         <div style="display: flex; flex-direction: row;">
                             <span style="margin-right: 4px">registros: {{ arItems.getTotalItemCount }}</span>
                             {{ knp_pagination_render(arItems) }}
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group"
                                  aria-label="...">
                                 <a class="btn btn-sm btn-default"
                                    href="{{ path('item_nuevo',{'id':0}) }}">Nuevo</a>
                                 {{ form_widget(form.btnEliminar) }}
                             </div>
                         </div>
                     </div>
                 </div>
             </section>
         </div>
     </div>
     {{ form_end(form) }}
 {% endblock %}




































