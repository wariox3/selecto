{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Informaci√≥n</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-1 control-label" for="_telefono">Nombre:</label>
                        <div class="col-md-5">
                            {{ form_widget(form.nombre) }}
                        </div>
                        <label class="col-md-1 control-label" for="_telefono">Referencia:</label>
                        <div class="col-md-5">
                            {{ form_widget(form.referencia) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 control-label">Retencion:</label>
                        <div class="col-md-5">
                            {{ form_widget(form.impuestoRetencionRel) }}
                        </div>
                        <label class="col-md-1 control-label">Iva:</label>
                        <div class="col-md-5">
                            {{ form_widget(form.impuestoIvaVentaRel) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 control-label">Precio:</label>
                        <div class="col-md-5">
                            {{ form_widget(form.vrPrecio) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-1 control-label"></label>
                        <div class="col-md-5">
                            {{ form_widget(form.afectaInventario) }}
                            {{ form_widget(form.producto) }}
                            {{ form_widget(form.servicio) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="btn btn-default btn-sm" style="float:left" href="{{ path('administracion_general_item_lista') }}">Cancelar</a>
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}




































