{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="btn-group" style="float:left">
        <a class="btn btn-default btn-sm"
           href="{{ path('recibo_lista', {'documento': arRecibo.documentoRel.codigoDocumentoPk}) }}">Volver</a>
        {{ form_widget(form.btnAutorizar) }}
        {{ form_widget(form.btnDesautorizar) }}
        {{ form_widget(form.btnAprobado) }}
        {{ form_widget(form.btnImprimir) }}
    </div>
    <div style="float:right">
        {% if arRecibo.estadoAutorizado == true %}<span class="badge badge-success">Autorizado</span>{% endif %}
    </div>
    <div style="float:right">
        {% if arRecibo.estadoAnulado == true %}<span class="badge badge-success">Desautorizado</span>{% endif %}
    </div>
    <div style="float:right">
        {% if arRecibo.estadoAprobado == true %}<span class="badge label-success">Aprobado</span>{% endif %}
    </div>
    <br><br>
    <table width="100%" class="table table-condensed table-bordered tabla-informacion ">
        <tr>
            <td class="titulo">ID:</td>
            <td class="td-in-well">{{ arRecibo.codigoReciboPk }}</td>
            <td class="titulo">CUENTA:</td>
            <td class="td-in-well">{{ arRecibo.cuentaRel.cuenta | default('') }}</td>
            <td class="titulo">PAGO:</td>
            <td class="numero">{{ arRecibo.vrPago | number_format(0, '.', ',') }}</td>
        </tr>
        <tr>
            <td class="titulo">NUMERO:</td>
            <td class="td-in-well">{{ arRecibo.numero | default('') }}</td>
            <td class="titulo">FECHA:</td>
            <td class="td-in-well">{{ arRecibo.fecha|date('Y-m-d') }}</td>
            <td class="titulo">TOTAL</td>
            <td class="numero">{{ arRecibo.vrPagoTotal | number_format(0, '.', ',') }}</td>
        </tr>
        <tr>
            <td class="titulo">FECHA PAGO:</td>
            <td class="td-in-well">{{ arRecibo.fechaPago | date('Y-m-d') }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
        </tr>
        <tr>
            <td class="titulo">TERCERO:</td>
            <td class="td-in-well">{{ arRecibo.terceroRel.nombreCorto }}</td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
            <td class="titulo"></td>
            <td class="td-in-well"></td>
        </tr>
        <tr>
            <td class="titulo">COMENTARIO:</td>
            <td class="td-in-well" colspan="5">{{ arRecibo.comentario }}</td>
        </tr>
    </table>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#detalles" data-toggle="tab">Detalles</a></li>
    </ul>
    <br/>
    <section class="panel">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered mb-none tabla-datos">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Numero</th>
                        <th>Tipo</th>
                        <th>Pago</th>
                        <th>Total</th>
                        <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                                   OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for arReciboDetalle in arReciboDetalles %}
                        <tr>
                            <td>{{ arReciboDetalle.codigoReciboDetallePk }}</td>
                            <input type="hidden"
                                   name="arrCodigo[]"
                                   value="{{ arReciboDetalle.codigoReciboDetallePk }}">
                            <td>{{ arReciboDetalle.numeroFactura }}</td>
                            <td>{{ arReciboDetalle.nombre |default('') }}</td>
                            <td style="text-align: right">{{ arReciboDetalle.vrPago | number_format(0, '.', ',') }}</td>
                            <td style="text-align: right">{{ arReciboDetalle.total | number_format(0, '.', ',') }}</td>
                            <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]"
                                                                  value="{{ arReciboDetalle.codigoReciboDetallePk }}"/>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div style="display: flex; flex-direction: row;">
                <span style="margin-right: 4px">registros: {{ arReciboDetalles.getTotalItemCount }}</span>
                {{ knp_pagination_render(arReciboDetalles) }}
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3">
                    <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group"
                         aria-label="...">
                        <div class="btn-group">
                            {{ form_widget(form.btnActualizar) }}
                            {% if arRecibo.estadoAutorizado == 0 %}
                                <a class="btn btn-default btn-sm"
                                   href="javascript:abrirVentana3('{{ path('recibo_detalle_nuevo', {'id':arRecibo.codigoReciboPk }) }}', 'ReciboAdicionarDetalle', 600, 900)">Nuevo</a>
                            {% endif %}
                            {{ form_widget(form.btnEliminar) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}




































