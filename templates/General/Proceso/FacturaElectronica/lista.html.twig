{% extends 'base.html.twig' %}
 {% block content %}
     {{ form_start(form) }}
     {{ notificar()|raw }}
     <div class="row">
         <div class="col-md-12">
             <section class="panel">
                 <header class="panel-heading">
                     <div class="panel-actions">
                         <a href="#" class="fa fa-caret-down"></a>
                     </div>
                     <h2 class="panel-title">Filtro de busqueda</h2>
                 </header>
                 <div class="panel-body">
                     <div class="form-group">
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Tercero:</label>
                             <div class="col-sm-2">

                             </div>
                         </div>
                     </div>
                     <div class="form-group">
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Desde:</label>
                             <div class="col-sm-2">

                             </div>
                         </div>
                         <div class="form-group form-group-sm">
                             <label class="col-sm-1 control-label">Hasta:</label>
                             <div class="col-sm-2">

                             </div>
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                         </div>
                     </div>
                 </div>
             </section>
         </div>
         <div class="col-md-12">
             <section class="panel">
                 <div class="panel-body">
                     <div class="table-responsive">
                         <table class="table table-bordered mb-none tabla-datos">
                             <thead>
                             <tr>
                                 <th>Id</th>
                                 <th>Numero</th>
                                 <th>Fecha</th>
                                 <th>Referencia</th>
                                 <th>Tercero</th>
                                 <th>Subtotal</th>
                                 <th>Iva</th>
                                 <th>Neto</th>
                                 <th title="Autorizado">Aut</th>
                                 <th title="Aprobado">Apr</th>
                                 <th title="Anulado">Anu</th>
                                 <th></th>
                                 <th><input type="checkbox" name="ChkSeleccionarTodosDetalle"
                                            OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
                             </tr>
                             </thead>
                             <tbody>
                             {% for movimiento in arMovimientos %}
                                 <tr>
                                     <td>{{ movimiento.codigoMovimientoPk }}</td>
                                     <td>{{ movimiento.numero }}</td>
                                     <td>{{ movimiento.fecha|date('Y-m-d') }}</td>
                                     <td>{{ movimiento.referencia }}</td>
                                     <td>{{ movimiento.tercero }}</td>
                                     <td class="numero">{{ movimiento.vrSubtotal | number_format }}</td>
                                     <td class="numero">{{ movimiento.vrIva | number_format }}</td>
                                     <td class="numero">{{ movimiento.vrTotalNeto | number_format }}</td>
                                     <td>{{ movimiento.estadoAutorizado ? 'SI':'NO' }}</td>
                                     <td>{{ movimiento.estadoAprobado ? 'SI':'NO' }}</td>
                                     <td>{{ movimiento.estadoAnulado ? 'SI':'NO' }}</td>
                                     {% if movimiento.estadoAutorizado == false %}
                                         <td align="center"><a
                                                     href="{{ path('movimiento_nuevo', {'documento' : documento, 'id': movimiento.codigoMovimientoPk }) }}"
                                                     title="editar descripcion"><i
                                                         class="fa fa-edit fa-lg"></i></a></td>
                                     {% else %}
                                         <td></td>
                                     {% endif %}
                                     <td align="center"><input type="checkbox" name="ChkSeleccionar[]"
                                                               value="{{ movimiento.codigoMovimientoPk }}"/></td>
                                 </tr>
                             {% endfor %}
                             </tbody>
                         </table>
                         <div style="display: flex; flex-direction: row;">
                             <span style="margin-right: 4px">registros: {{ arMovimientos.getTotalItemCount }}</span>
                             {{ knp_pagination_render(arMovimientos) }}
                         </div>
                     </div>
                 </div>
                 <div class="panel-footer">
                     <div class="row">
                         <div class="col-sm-9 col-sm-offset-3">
                             <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                                 {{ form_widget(form.btnEnviar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                             </div>
                         </div>
                     </div>
                 </div>
             </section>
         </div>
     </div>
     {{ form_end(form) }}
 {% endblock %}




































