{% extends "base.html.twig" %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="col-sm-12">
        <section class="panel panel-featured panel-featured-primary">
            <header class="panel-heading">
                <h2 class="panel-title">Información</h2>
            </header>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.nombreCorto,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.nombreCorto) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Nit:</label>
                    <div class="col-sm-2">
                        {{ form_widget(form.nit,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.nit) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Dig verificación:</label>
                    <div class="col-sm-1">
                        {{ form_widget(form.digitoVerificacion,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.digitoVerificacion) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre Corto</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ciudadRel,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.ciudadRel) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Tipo persona:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipoPersonaRel,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.tipoPersonaRel) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Dirección:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.direccion,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.direccion) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Correo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.correo,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.correo) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Teléfono:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefono,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.telefono) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Extension:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.extension,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.extension) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Porcentaje interes mora:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.porcentajeInteresMora,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.porcentajeInteresMora) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Generar interes mora:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.generaInteresMora,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.generaInteresMora) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Regimen:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.RegimenRel,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.RegimenRel) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Formato factura:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.formatoFactura,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.formatoFactura) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Vigencia desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesdeVigencia,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.fechaDesdeVigencia) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Vigencia hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHastaVigencia,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.fechaHastaVigencia) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Numeración desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeracionDesde,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.numeracionDesde) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Numeración hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeracionHasta,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.numeracionHasta) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Resolución Dian factura:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeroResolucionDianFactura,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.numeroResolucionDianFactura) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Información cuenta pago:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.informacionCuentaPago,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.informacionCuentaPago) }}</div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Prefijo facturación:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.prefijoFacturacion,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.prefijoFacturacion) }}</div>
                    </div>
                    <label class="col-sm-2 control-label">Matricula mercantil:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.matriculaMercantil,{ 'attr' : {'class' : 'form-control'}}) }}
                        <div style="color:red;">{{ form_errors(form.matriculaMercantil) }}</div>
                    </div>
                </div>
                <hr>
                <div class="btn-group" style="float: right; margin-right: 5px !important;">
                    {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                </div>
            </div>
        </section>
    </div>
    {{ form_end(form) }}
{% endblock %}
