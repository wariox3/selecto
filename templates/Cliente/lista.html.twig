{% extends 'base_admin.html.twig' %}

{% block content %}

    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                            <a href="#" class="fa fa-times"></a>
                        </div>

                        <h2 class="panel-title">Filtro de busqueda</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label">Descripcion:</label>
                            <div class="col-sm-5">
                                {{ form_widget(form.nombreCorto) }}
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">
                                {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    <div class="col-md-12">
    <section class="panel">
    <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-condensed table-bordered table-hover mb-none">
                    <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Nombre</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for arCliente in arClientes %}
                            <tr>
                                <td>{{ arCliente.codigoClientePk }}</td>

                                <td>{{ arCliente.nombreCorto }}</td>
                                <td class="text-center">
                                    <a href="{{ path('cliente_nuevo', { 'id': arCliente.codigoClientePk }) }}">
                                        <i class="fa fa-edit fa-lg"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="{{ path('cliente_detalle', { 'id': arCliente.codigoClientePk }) }}">
                                        <i class="fa fa-eye fa-lg"></i>
                                    </a>
                                </td>
                                <td class="text-center">

                                    <input type="checkbox" name="ChkSeleccionar[]" value="{{ arCliente.codigoClientePk }}"/>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{ knp_pagination_render(arClientes) }}
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-3" >
                    <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                        <a class="btn btn-sm btn-default" href="{{ path('cliente_nuevo', {'id': 0}) }}">Nuevo</a>
                        {{ form_widget(form.btnEliminar) }}
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="tabs tabs-primary">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#centros" data-toggle="tab"><i class="fa fa-star"></i> Centros</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="centros" class="tab-pane active">
                    <section class="panel">
                        <div class="panel-body">
                            <table>
                                <thead>
                                <tr>
                                    <td>sdf</td>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>87</td>
                                </tr>
                                </tbody>

                            </table>
                        </div>
                        <div class="panel-footer">
                            <button disabled>lero</button>
                            <button disabled>lero</button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </section>



{% endblock %}