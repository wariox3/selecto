{% extends 'base_admin.html.twig' %}

{% block content %}

    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div class="panel-actions">
                            <a href="#" class="fa fa-caret-down"></a>
                            <a href="#" class="fa fa-times"></a>
                        </div>

                        <h2 class="panel-title">Filtro de busqueda</h2>
                    </header>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-1 control-label">Descripcion:</label>
                            <div class="col-sm-5">
                                {{ form_widget(form.nombreCorto) }}
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">
                                {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    <div class="col-md-12">
    <section class="panel">
    <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-condensed table-bordered table-hover mb-none">
                    <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Nombre</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for arCliente in arClientes %}
                            <tr>
                                <td>{{ arCliente.codigoClientePk }}</td>

                                <td>{{ arCliente.nombreCorto }}</td>
                                <td >
                                    <a href="{{ path('cliente_nuevo', { 'id': arCliente.codigoClientePk }) }}">
                                        <i class="fa fa-edit fa-lg"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('cliente_detalle', { 'id': arCliente.codigoClientePk }) }}">
                                        <i class="fa fa-share-square fa-lg"></i>
                                    </a>
                                </td>
                                <td style="text-align: center;"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCliente.codigoClientePk }}"/></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-sm-6" >
                    <a class="btn btn-sm btn-default" style="float: right; margin-right: 5px !important;" href="{{ path('cliente_nuevo', {'id': 0}) }}">Nuevo</a>
                </div>
                <div class="col-sm-6" >
                    {{ form_widget(form.btnEliminar) }}
                </div>
            </div>
        </footer>
    </section>



{% endblock %}