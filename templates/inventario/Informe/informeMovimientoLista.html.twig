{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                    </div>
                    <h2 class="panel-title">Filtro de busqueda</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-1 control-label">Numero:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.txtNumeroMovimiento) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-1 control-label">Desde:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.fechaDesde) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-sm-1 control-label">Hasta:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.fechaHasta) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <br/>
        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-none tabla-datos">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha</th>
                                <th>Numero</th>
                                <th>Documento</th>
                                <th>Tercero</th>
                                <th>Item</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Porcentaje IVA</th>
                                <th>IVA</th>
                                <th>Subtotal</th>
                                <th>Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arMovimientoDetalle  in arMovimientoDetalles %}
                                <tr>
                                    <td>{{ arMovimientoDetalle.codigoMovimientoDetallePk }}</td>
                                    <td>{{ arMovimientoDetalle.movimientofecha|date('Y-m-d') }}</td>
                                    <td>{{ arMovimientoDetalle.movimientonumero }}</td>
                                    <td>{{ arMovimientoDetalle.documento }}</td>
                                    <td>{{ arMovimientoDetalle.tercero }}</td>
                                    <td>{{ arMovimientoDetalle.itemDescripcion }}</td>
                                    <td>{{ arMovimientoDetalle.cantidad }}</td>
                                    <td class="numero">{{ arMovimientoDetalle.vrPrecio | number_format(0, '.', ',') }}</td>
                                    <td>{{ arMovimientoDetalle.porcentajeIva }}</td>
                                    <td class="numero">{{ arMovimientoDetalle.vrIva | number_format (0, '.', ',') }}</td>
                                    <td class="numero">{{ arMovimientoDetalle.vrSubtotal | number_format (0, '.', ',') }}</td>
                                    <td class="numero">{{ arMovimientoDetalle.vrTotal | number_format (0, '.', ',') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div style="display: flex; flex-direction: row;">
                        <span style="margin-right: 4px">registros: {{ arMovimientoDetalles.getTotalItemCount }}</span>
                        {{ knp_pagination_render(arMovimientoDetalles) }}
                    </div>
                </div>
            </section>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}




































