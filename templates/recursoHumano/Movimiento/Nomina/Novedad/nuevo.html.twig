{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Empleado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.empleadoRel) }}
                </div>
                <label for="credito_creditoTipoRel" class="control-label col-sm-2">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.novedadTipoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2">Desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Ibc propuesto::</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrIbcPropuesto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2">Hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHasta) }}
                </div>
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Valor propuesto::</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrPropuesto) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2">Comentario:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.prorroga) }}
                    {{ form_widget(form.transcripcion) }}
                </div>
            </div>
        </div>
    </div>
    <div></div>
    <div class="modal-footer">
        <div class="btn-group" style="float: left;">
            <a class="btn btn-sm btn-default" href="{{ path('recursoHumano_novedad_lista') }}">Cancelar</a>
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.guardar) }}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <br>
{% endblock %}