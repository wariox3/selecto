{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form,{'attr': {'class' :'form-horizontal'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Empleado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.empleadoRel) }}
                </div>
                <label for="credito_creditoTipoRel" class="control-label col-sm-2">Concepto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.conceptoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="credito_creditoPagoRel" class="control-label col-sm-2">Valor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.vrValor) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2">Detalle:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.detalle) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-4">
                    {{ form_widget(form.permanente) }}
                    {{ form_widget(form.aplicaDiaLaborado) }}
                    {{ form_widget(form.aplicaNomina) }}
                    {{ form_widget(form.aplicaPrima) }}
                    {{ form_widget(form.aplicaCesantia) }}
                    {{ form_widget(form.estadoInactivoPeriodo) }}
                </div>
                <label class="control-label col-sm-2">Fecha:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fecha) }}
                    <cite style="font-size: 10px;">* Recuerde: solo aplica si no es permanente</cite>
                </div>
            </div>
        </div>
    </div>
    <div></div>
    <div class="modal-footer">
        <div class="btn-group" style="float: left;">
            <a class="btn btn-sm btn-default" href="{{ path('recursoHumano_adicional_lista') }}">Cancelar</a>
        </div>
        <div class="btn-group" style="float: right;">
            {{ form_widget(form.guardar) }}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br>
    <br>
{% endblock %}