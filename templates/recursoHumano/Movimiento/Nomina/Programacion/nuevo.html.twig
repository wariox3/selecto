{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="control-label col-sm-2">Tipo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.pagoTipoRel) }}
                    {{ form_errors(form.pagoTipoRel) }}
                </div>
                <label for="form_nombre" class="control-label col-sm-2">Nombre:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_grupoRel" class="control-label col-sm-2">Desde:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaDesde) }}
                    {{ form_errors(form.fechaDesde) }}
                </div>
                <label for="form_grupoRel" class="control-label col-sm-2">Grupo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.grupoRel) }}
                    {{ form_errors(form.grupoRel) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="control-label col-sm-2">Hasta:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHasta) }}
                    {{ form_errors(form.fechaHasta) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="control-label col-sm-2">Hasta periodo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.fechaHastaPeriodo) }}
                    <cite style="font-size: 10px;">- Fecha hasta donde va realmente el periodo, por ejemplo cuando el mes tiene 31 dias</cite>
                    {{ form_errors(form.fechaHastaPeriodo) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="control-label col-sm-2">Mensaje pago:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.mensajePago) }}
                    {{ form_errors(form.mensajePago) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm"
           href="{{  path('recursoHumano_programacion_lista') }}">Cancelar</a>
        {{ form_widget(form.guardar) }}
    </div>
    {{ form_end(form) }}
{% endblock %}